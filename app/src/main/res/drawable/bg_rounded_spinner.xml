<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#828282" android:width="1dp" />
                    <corners android:radius="30dp" />
                    <padding
                        android:right="16dp"
                        android:left="16dp"
                        android:top="8dp"
                        android:bottom="8dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/arrow_down" android:gravity="right|center" />
            </item>
        </layer-list>
    </item>

</selector>